{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "type": "object",
   "properties": {
      "module": {
         "type": "array",
         "items": {
            "type": "string"
         },
         "minItems": 1
      },
      "specifier": {
         "type": "array",
         "items": {
            "type": "string"
         },
         "minItems": 1
      },
      "include": {
         "type": "string",
         "pattern": "^((?!\\!\\(|\\)|\\!\\(|\\)).)*$"
      },
      "exclude": {
         "type": "array",
         "items": {
            "type": "string"
         }
      },
      "sortStrategy": {
         "type": "string",
         "enum": ["referenced", "occurrences"]
      }
   }
}
